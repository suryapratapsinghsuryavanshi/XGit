void setUtilData(char* key, char* value) {
    // Create a file on the root file system and store all the nessory information on it.
    //1. Create a pair of key and value.
    char* finalValue = (char*) malloc(strlen(key) + strlen(value) + 4);
    strcpy(finalValue, key);
    strcat(finalValue, "=");
    strcat(finalValue, value);
    std::ofstream fout;
    //2. Store the pair of key and value in file.
    fout.open(UTILS_CONFIG_FILE, ios::app);
    fout<<finalValue<<std::endl;
    fout.close();
}

char* getUtilData(char* key) {
    int found = 0;
    char* output = (char*) new char(50);
    std::ifstream fin;
    fin.open(UTILS_CONFIG_FILE, ios::in);
    for(std::string line; std::getline(fin, line);) {
        if(line.find(key) != std::string::npos) {
            std::string temp = line.substr(strlen(key) + ESCAPE_SIZE, line.length());
            strcpy(output, temp.c_str());
            found += 1;
            break;
        }
    }
    fin.close();
    return found >= 1 ? output : NULL;
}

void deleteUtilConfig() {
    remove(UTILS_CONFIG_FILE);
}

void clearScreen() {
    cout << "\033[2J\033[1;1H";
